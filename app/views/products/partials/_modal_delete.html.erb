<% modal_id = "modal_#{product.id}" %>
<div id="<%= modal_id %>" class="modal">
  <div class="modal-content">
    <h4>
      <%= sanitize t('alert.delete.title', name: product.name,
          class: Product.model_name.human) %>
    </h4>
    <p><%= sanitize t('alert.delete.text') %></p>
  </div>
  <div class="modal-footer">
    <%= link_to t('ui.btn-delete'), product, method: :delete,
        class: 'modal-action modal-close waves-effect waves-purple btn-flat',
          onclick: "add_query_to_params('#{modal_id}')" %>
    <div class="modal-action modal-close waves-effect waves-purple btn-flat ">
      <%= t 'ui.btn-cancel' %>
    </div>
  </div>
</div>
