<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="input-field col s12">
      <%= f.text_field :name, autocomplete: 'off' %>
      <%= f.label :name %>
    </div>

    <div class="input-field col s12 l6">
      <%= f.text_field :price, autocomplete: 'off' %>
      <%= f.label :price %>
    </div>

    <div class="input-field col s12 l6">
      <%= f.select :categories, options_for_select(categories),
      {include_blank: true}, {class: 'chosen-select',
        id: 'product_categories', data: {placeholder:
          t('ui.choose_f_msg', obj: Category.model_name.human)}} %>
      </div>
  </div>

  <div class="row">
    <%#= f.label :categories %>
  </div>


  <div class="actions">
    <%= f.submit class: 'btn' %>
  </div>
<% end %>
